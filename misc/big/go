convert $1.png -resize 40x40 bullet-big.png
convert bullet-big.png -channel A -blur 0x2.5 +channel -fill '#ff0000' -colorize 100% shadow.png
composite -gravity center $1.png shadow.png $1.select.png
convert bullet-big.png -channel A -blur 0x2.5 +channel -fill '#ffff00' -colorize 100% shadow.png
composite -gravity center $1.png shadow.png $1.hilite.png

convert -page +4+4 $1.png -alpha set \
          \( +clone -background '#ffff00' -shadow 80x4+1+1 \) +swap \
          -background none -mosaic     /tmp/$1.hilite.png
mogrify -trim /tmp/$1.hilite.png
convert -size 40x40 xc:transparent bg.png
composite -gravity center /tmp/$1.hilite.png bg.png $1.hilite.png

convert -page +4+4 $1.png -alpha set \
          \( +clone -background '#ff0000' -shadow 80x4+1+1 \) +swap \
          -background none -mosaic     /tmp/$1.select.png
mogrify -trim /tmp/$1.select.png
convert -size 40x40 xc:transparent bg.png
composite -gravity center /tmp/$1.select.png bg.png $1.select.png
rm bg.png
